@model Client;
<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8"/>
        <title>Registration Form</title>
    </head>
    <body>
        
        <form method="post" asp-controller="Client" asp-action="Registration">
            <label>Имя:</label>
            <input type="text" asp-for="ClientName"/><br/>

            <label>Фамилия:</label>
            <input type="text" asp-for="ClientSurname"/><br/>

            <label>Возраст:</label>
            <input type="text" asp-for="ClientAge"/><br/>

            <label>Gmail:</label>
            <input type="email" asp-for="ClientEmail"/>
            <span asp-validation-for="ClientEmail"></span><br/>

            <label>Пароль:</label>
            <input type="password" asp-for="ClientPassword"/><br/>

            <label>Кто вы?</label><br/>
            <span>Работник</span>
            <input type="radio" asp-for="ClientStatus" value=false/>
            <span>Работодатель</span>

            <input type="radio" asp-for="ClientStatus" value=true /><br />
            <input type="submit" value="Отправить"/>
        </form>
        <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
        <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
        <script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>
    </body>
</html>