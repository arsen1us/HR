@model List<Company>
<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8"/>
    </head>
    <body>
        <form method="post">
            <label>Choose company:</label>
            <select class="references">
            @foreach (var company in Model)
            {
                <option class="references" value=@company.CompanyName>@company.CompanyName</option>
            }
            </select>
        </form>
    </body>
</html>
